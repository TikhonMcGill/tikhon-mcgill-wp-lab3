<%- include('header'); -%>
<div class="content">
    <h1>Clients</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(client => { %>
                <tr>
                    <th scope="row">
                        <%= client.contact %>
                    </th>
                    <td>
                        <a href="/api/person/<%= client.num_client %>">
                            <%= client.num_client %>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<br>
<%- include('footer'); -%>